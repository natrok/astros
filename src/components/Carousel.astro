---
<section class="section">
<div id="testimonials" class="container-custom carousel" >
   <div x-data={`carousel(${JSON.stringify(testimonials)})`} x-init="startAutoplay()" class="carousel-container relative w-full overflow-hidden"> 
    <!-- Contenedor del carrusel duration-700 ease-out -->
    <div 
      class="flex transition-transform duration-400 ease-out" 
      :style="'transform: translateX(-' + (index * 33.33) + '%)'"
    >
      <template x-for="(item, i) in items" :key="i">

        <!-- <div class="w-1/3 px-2 flex-shrink-0 translate-x-full"> -->
        <div class="w-1/3 px-2 flex-shrink-0 translate-x-full" >
          <div class="card p-6 border border-gray-200 dark:border-gray-700" x-show="index == i" 
          x-transition:enter="transition ease-out duration-1000" 
          x-transition:enter-start="opacity-20 scale-50"
          x-transition:enter-end="opacity-100 scale-100"
          x-transition:leave="transition ease-in duration-300"
          x-transition:leave-start="opacity-100 scale-100"
          x-transition:leave-end="opacity-0 scale-50">  

          <!-- <p class="text-lg font-semibold" x-text="item.author"></p>
           -->
           <div class="flex items-center mb-2">
            <img x-bind:src="item.avatar" 
              x-bind:alt="item.author"
              class="w-12 h-12 rounded-full mr-4 object-cover"
              loading="lazy"
            />
            <div>
              <p class="font-semibold text-gray-900 dark:text-white" x-text= "item.author"></p>
              <img :src="`https://flagcdn.com/${item.from}.svg`" style='width:2rem' ' :alt="`${item.country}`">
              <!-- <p class="text-sm text-gray-500 dark:text-gray-400" x-text= "item.from"></p> -->
            </div>
          </div>
          <div class="mb-6">
            {[...Array(5)].map(() => (
              <svg class="w-5 h-5 inline-block text-warning-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
              </svg>
            ))}
          </div>
          <blockquote class="mb-6 text-gray-700 dark:text-gray-300 italic" x-text="item.content"></blockquote>
          
          
        </div>

        </div>
        </div>
      </template>
    </div>

    <!-- Botones de navegaci√≥n -->
    <button x-on:click="prev()" class="absolute left-0 carousel-btn rounded-full">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="3" class="size-5 md:size-6 pr-0.5" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
    </svg>
    </button>
    <!-- <button @click="next()" class="absolute right-0 top-1/2 transform -translate-y-1/2 bg-gray-700 text-white px-3 py-2 rounded"> -->
      <button x-on:click="next()" class="absolute right-0 carousel-btn rounded-full ">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke="currentColor" fill="none" stroke-width="3" class="size-5 md:size-6 pl-0.5" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 4.5l7.5 7.5-7.5 7.5" />
      </svg>
    </button>

