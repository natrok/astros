---
import LadyLogo from "../assets/logoLady.png";
const currentPath = Astro.url.pathname;

interface Props {
  title: string;
  highlightText?: string;
  description: string;
}

const { title, highlightText, description } = Astro.props;

// Split the title to insert the highlighted text if provided
let titleStart = title;
let titleEnd = "";

if (highlightText) {
  const titleParts = title.split(highlightText);
  if (titleParts.length > 1) {
    titleStart = titleParts[0];
    titleEnd = titleParts[1];
  }
}
---

<!-- Hero Section -->
<section class="relative overflow-hidden bg-gradient-to-b from-primary-100 to-white dark:from-primary-950 dark:to-secondary-950 pt-24 md:pt-32 pb-16 md:pb-20">
  <div class="absolute inset-0 z-0 opacity-30">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>
  
  <div class="flex container-custom relative z-10">
    <div class="flex-1 logo">
      <img src={LadyLogo.src} alt="Logo">
    </div>
    <div class="flex-2 text-center max-w-3xl mx-auto px-4">
      <h1 class="text-3xl md:text-4xl lg:text-5xl mb-4 md:mb-6 text-gray-900 dark:text-white animate-slide-down">
        {highlightText ? (
          <>
            {titleStart}<span class="text-accent-500">{highlightText}</span>{titleEnd}
          </>
        ) : (
          title
        )}
      </h1>
      <p class="text-lg md:text-xl text-gray-700 dark:text-gray-300 mb-6 md:mb-8 animate-slide-up" style="animation-delay: 200ms">
        {description}
      </p>
      
      {currentPath != "/contact" &&
        <div class="mt-16 text-center">
          <a href="/contact" class="btn-primary">
            Reserva tu Clase de Prueba Gratis
          </a>
        </div>
      }

      <!-- <button
        class="bg-green-500 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-full shadow-md"
      >Reserva tu Clase de Prueba Gratis</button> -->
    </div>
  </div>
  
  <!-- Animated Shapes -->
  <div class="absolute -bottom-16 left-0 right-0 flex justify-center">
    <div class="w-48 md:w-64 h-48 md:h-64 bg-accent-400 rounded-full filter blur-3xl opacity-20 animate-pulse"></div>
  </div>
</section> 
<style>
  .section-container {
      display: flex; 
      align-items: center; 
      justify-content: space-between; 
      padding: 20px;
      border: 1px solid #ccc; 
      max-width: 800px;
      margin: auto;
  }
  
  .logo {
      flex: 1; 
      max-width: 250px; 
  }
  
  .logo img {
      width: 100%; 
      height: auto;
  }

  .text {
      flex: 2; 
      padding-left: 20px;
  }
</style>