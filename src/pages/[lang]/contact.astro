---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import ContactForm from '../../components/Contact.astro';
import Footer from '../../components/Footer.astro';
import HeroSection from '../../components/HeroSection.astro';

import {geti18n} from "../../i18n/utils"; // Import the i18n function to 
const {currentLocale = 'es'} = Astro;
const translations = geti18n({currentLocale}); 


export function getStaticPaths() {
  return [
    { params: { lang: "es" } },
    { params: { lang: "en" } },
    { params: { lang: "fr" } },
  ];
}
---

<Layout title="Contact Me">
  <Header />
  <main>
     <HeroSection 
      title={translations.contact.title} 
      highlightText={translations.contact.highlightText} 
      description={translations.contact.description} 
      />
    <ContactForm />
  </main>
  <Footer />
</Layout> 
